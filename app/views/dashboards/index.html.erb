<div class="row heading-spacer">
  <div class="col-md-12">
    <div class="alert alert-success" role="alert">
      <p id="notice"><%= notice %></p>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h1>Dashboards</h1>

    <%= link_to "New Dashboard", new_dashboard_path, {class: 'btn btn-primary btn-lg btn-block'} %>

    <table>
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @dashboards.each do |dashboard| %>
          <tr>
            <td><%= link_to 'Show', dashboard %></td>
            <td><%= link_to 'Edit', edit_dashboard_path(dashboard) %></td>
            <td><%= link_to 'Destroy', dashboard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

